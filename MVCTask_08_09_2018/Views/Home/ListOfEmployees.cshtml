@model IEnumerable<MVCTask_08_09_2018.Models.Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Of Employees</h2>
<hr />
<br />

<p>@Html.ActionLink("Add Employee", "Add", null, new { @class = "btn btn-primary" })</p>
<br />

@if (Model.Any())
{

    <table id="employees" class="table table-hover">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Sex.Type)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>@Html.DisplayNameFor(model => model.Department.Name)</th>
            <th>@Html.DisplayNameFor(model => model.ProgrammingLanguage.Name)</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Sex.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Department.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ProgrammingLanguage.Name)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>

}
else
{
    <h3 class="text-warning">There is no employees in database at this moment.</h3>
}

<br />